<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:theme="@style/AppTheme.DarkAppBar"
        android:id="@+id/quiztoolbar"
        android:elevation="5dp"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"/>

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/timecountertextview"
            android:textStyle="bold"
            android:textSize="28sp"
            android:text="01:33"
            android:gravity="center"
            android:layout_weight="0.15"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="0.6"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:textColor="#6c7396"   
                android:id="@+id/quizpositiontextview"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Question 1/6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/questiontextview"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="The assassination of Julius Caesar was the result of a conspiracy by many Roman senators, he was stabbed by?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Option A -->
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionARadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionATextview"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="Lex Merciful"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- Option B -->
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionBRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionBTextview"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="Cassius Longinus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- Option C -->
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionCRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionCTextview"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="Junius Brutus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- Option D -->
            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <RadioButton
                    android:checked="false"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/optionDRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/optionDTextview"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:text="Orsa Kemi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_weight="0.25"
            android:layout_width="match_parent"
            android:layout_height="0.1dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/proceedquizbutton"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginBottom="40dp"
                android:background="@drawable/roundbutton"
                android:text="Proceed"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="200dp"
                android:layout_height="50dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
